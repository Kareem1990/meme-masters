<section>
  <h2>Upload New Meme</h2>

  <form class="new-post-form">
    <div>
      <label for="post-url">Enter meme link here!</label>
      <input id="post-url" name="post-url" />
    <div>
      <label for="title">Enter meme title!</label>
      <input id="title" name="title" />
    </div>
        <div>
      <label for="share-to">Share with</label>
      <input type="text" id="share-to" name="share-to" />
    </div>
    <button type="submit" class="btn btn-secondary">Share</button>
  </form>
</section>

{{#if posts.length}}
<section class="container">
  <h2>Your Memes</h2>
  <ul class="list-unstyled row">
    {{#each posts as |post|}}
    <li class="col-4 mb-2">
      {{> post-info post}}
      <button type="button" data-id="{{post.id}}" class="delete-post-btn">Delete post</button>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
<script src="/javascript/delete-post.js"></script>
